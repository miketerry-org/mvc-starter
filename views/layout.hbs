<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{site_title}}</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      /* Fade in/out spinner */ #loading-spinner { opacity: 0; transition:
      opacity 0.3s ease-in-out; pointer-events: none; }
      #loading-spinner.htmx-request { display: block; opacity: 1; }
    </style>
  </head>
  <body
    class="d-flex flex-column min-vh-100 bg-dark text-light"
    hx-boost="true"
  >
    <!-- Header -->
    <header class="container-fluid py-4 border-bottom border-secondary">
      <div class="row align-items-start">
        <!-- Navigation -->
        <nav class="col-2 d-flex flex-column gap-2">
          <a
            href="/"
            class="btn btn-outline-light btn-sm text-start"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-indicator="#loading-spinner"
          >Home</a>
          <a
            href="/about"
            class="btn btn-outline-light btn-sm text-start"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-indicator="#loading-spinner"
          >About</a>
          <a
            href="/contact"
            class="btn btn-outline-light btn-sm text-start"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-indicator="#loading-spinner"
          >Contact</a>
          <a
            href="/support"
            class="btn btn-outline-light btn-sm text-start"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-indicator="#loading-spinner"
          >Support</a>
        </nav>

        <!-- Title -->
        <div class="col text-center">
          <h1 class="display-4 fw-bold">{{site_title}}</h1>
          <h2 class="h5 text-secondary">{{site_slogan}}</h2>
        </div>

        <!-- Sign In -->
        <div class="col-2 text-end">
          <a
            href="/sign-in"
            class="btn btn-light btn-sm"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-indicator="#loading-spinner"
          >
            Sign In
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main
      id="main"
      class="container my-5 flex-grow-1"
      tabindex="-1"
      aria-live="polite"
    >
      {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="text-center py-3 border-top border-secondary text-muted">
      &copy;
      {{site_copyright}}
      {{site_owner}}. All rights reserved.
    </footer>

    <!-- Spinner -->
    <div
      id="loading-spinner"
      class="position-fixed top-0 start-0 w-100 text-center bg-dark bg-opacity-75 py-2 text-light"
      style="z-index: 1050; display: none;"
      role="status"
      aria-live="polite"
    >
      <div
        class="spinner-border spinner-border-sm me-2"
        role="status"
        aria-hidden="true"
      ></div>
      Loading contentâ€¦
    </div>

    <!-- Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
      defer
    ></script>

    <script src="/js/htmx.min.js" defer></script>
    <script src="/js/main.js" defer></script>
  </body>
</html>